<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:chronometer="http://schemas.android.com/apk/res/com.example.jyodroid.kogichronometer">

    <item chronometer:state_paused="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="oval">
            <stroke android:width="4dp" android:color="@android:color/holo_orange_dark" />
            <size android:width="200dp" android:height="200dp" />
        </shape>
    </item>

    <item chronometer:state_running="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="oval">
            <stroke android:width="4dp" android:color="@android:color/holo_green_light" />
            <size android:width="200dp" android:height="200dp" />
        </shape>
    </item>

    <item chronometer:state_stopped="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="oval">
            <stroke android:width="4dp" android:color="@color/colorPrimary" />
            <size android:width="200dp" android:height="200dp" />
        </shape>
    </item>

    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="oval">
            <stroke android:width="4dp" android:color="@color/colorPrimary" />
            <size android:width="200dp" android:height="200dp" />
        </shape>
    </item>

</selector>